FROM sapmachine:17-ubuntu-22.04

LABEL maintainer="Peter Li <peter279k@gmail.com>"

RUN cd /root && \
    apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -qq -y wget && \
    wget -O validator_cli.jar https://github.com/hapifhir/org.hl7.fhir.core/releases/latest/download/validator_cli.jar 

ENTRYPOINT [ "bash" ]
